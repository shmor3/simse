{
	"name": "simse",
	"version": "1.0.0",
	"description": "A modular pipeline framework for orchestrating multi-step AI workflows using ACP, MCP, and vector memory",
	"type": "module",
	"main": "dist/lib.js",
	"types": "dist/lib.d.ts",
	"exports": {
		".": {
			"bun": "./src/lib.ts",
			"import": "./dist/lib.js",
			"types": "./dist/lib.d.ts"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"sideEffects": false,
	"engines": {
		"bun": ">=1.0.0"
	},
	"keywords": [
		"acp",
		"agent-communication-protocol",
		"mcp",
		"model-context-protocol",
		"ai",
		"typescript",
		"bun"
	],
	"license": "MIT",
	"scripts": {
		"build": "bun build ./src/lib.ts --outdir ./dist --target bun && tsc --project tsconfig.build.json",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"typecheck": "bun x tsc --noEmit"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.12.0",
		"hono": "^4.12.2",
		"ink": "^6.8.0",
		"ink-select-input": "^6.2.0",
		"ink-spinner": "^5.0.0",
		"picomatch": "^4.0.3",
		"react": "^19.2.4",
		"zod": "^3.24.0"
	},
	"optionalDependencies": {
		"@huggingface/transformers": "^3.8.1"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/picomatch": "^4.0.2",
		"@types/react": "^19.2.14",
		"@xterm/headless": "^6.0.0",
		"ink-testing-library": "^4.0.0",
		"node-pty": "^1.1.0",
		"typescript": "^5.7.0"
	},
	"trustedDependencies": [
		"node-pty",
		"onnxruntime-node",
		"protobufjs"
	]
}
