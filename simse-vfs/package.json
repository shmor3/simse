{
	"name": "simse-vfs",
	"version": "1.0.0",
	"type": "module",
	"main": "dist/lib.js",
	"types": "dist/lib.d.ts",
	"exports": {
		".": {
			"bun": "./src/lib.ts",
			"import": "./dist/lib.js",
			"types": "./dist/lib.d.ts"
		}
	},
	"engines": {
		"bun": ">=1.0.0"
	},
	"scripts": {
		"build": "bun build ./src/lib.ts --outdir ./dist --target bun && tsc --project tsconfig.build.json",
		"build:engine": "cd engine && cargo build --release",
		"build:engine:debug": "cd engine && cargo build",
		"test": "bun test",
		"test:engine": "cd engine && cargo test",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"typecheck": "bun x tsc --noEmit"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"typescript": "^5.7.0"
	}
}
